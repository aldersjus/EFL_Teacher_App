<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/markOffLess"
        android:id="@+id/textViewMarkOff"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="18dp"
        android:textColor="@color/colorPrimary"
        android:textSize="48dp"
        android:textStyle="bold|italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000"
        android:textSize="22dp"
        android:id="@+id/textViewLessonMarkOffMessage"
        android:layout_gravity="center_horizontal"
        android:text=""
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        />


    <Spinner
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:textSize="22dp"
        android:id="@+id/spinnerMarkOff"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/spinner_border"
        >
    </Spinner>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/select_name_lesson"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/textView2"
        android:textSize="22dp"
        />


    <EditText
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:maxLines="1"
        android:inputType="textCapSentences"
        android:id="@+id/editTextTwoMarkOff"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/enterLessTitle"
        android:layout_marginTop="10dp"
        android:id="@+id/textView6"
        android:layout_gravity="center_horizontal"
        android:textSize="22dp"
        />

    <Button
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button"
        android:text="@string/markOffLess"
        android:id="@+id/buttonMarkOff"
        android:textSize="22dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/colorPrimaryDark"
        android:padding="20dp"
        android:layout_marginTop="70dp"
        />


</LinearLayout>