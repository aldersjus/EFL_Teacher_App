<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/newGroupLess"
        android:id="@+id/textViewLessonNew"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold|italic"
        android:textSize="48dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000"
        android:textSize="22dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/textViewLessonNewMessage"
        android:text=""
        android:layout_marginTop="40dp" />

    <EditText
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:inputType="textCapWords"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/editTextLessonNew"
        android:maxLines="1"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/enterLessonName"
        android:layout_gravity="center_horizontal"
        android:id="@+id/textView7"
        android:textSize="22dp"
        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/addKids"
        android:layout_marginTop="70dp"
        android:textSize="22dp"
        android:id="@+id/lessonCheckBoxKidGroup"/>

    <Button
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button"
        android:text="@string/createNewLess"
        android:id="@+id/buttonLessonNew"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:textSize="22dp"
        android:textColor="@color/colorPrimaryDark"
        android:padding="20dp"
        />

</LinearLayout>