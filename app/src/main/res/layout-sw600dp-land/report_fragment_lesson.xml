<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:scrollbars="none"
        android:layout_marginTop="64dp"
        >



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
               >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lessInfoLand"
                    android:id="@+id/textViewReportTopLess"
                    android:textSize="48dp"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold|italic"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginTop="10dp"
                    />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="50dp"
                        android:layout_marginStart="150dp"
                        >



                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:layout_marginTop="4dp"
                            android:id="@+id/lessonInfoLinear"
                            android:layout_marginStart="40dp">


                            <Spinner
                                android:layout_width="280dp"
                                android:layout_height="60dp"
                                android:textSize="22dp"
                                android:id="@+id/spinnerLessonReportHere"
                                android:layout_marginTop="0dp"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/spinner_border"
                                >
                            </Spinner>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="22dp"
                                android:text="@string/select_name_lesson"
                                android:layout_gravity="center_horizontal"
                                android:id="@+id/textViewReportLessName"

                                android:layout_marginTop="10dp" />

                            <Button
                                style="@style/Widget.AppCompat.Button"
                                android:layout_width="280dp"
                                android:layout_height="wrap_content"
                                android:text="@string/showInfo"
                                android:id="@+id/buttonReportLess"
                                android:layout_gravity="center_horizontal"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="22dp"
                                android:padding="20dp"
                                android:layout_marginTop="30dp" />


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="70dp">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    >


                                    <android.support.v7.widget.CardView
                                        android:layout_width="320dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:padding="12dp"
                                        android:layout_margin="4dp"
                                        android:elevation="12dp"
                                        android:paddingBottom="50dp"
                                        >

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:minHeight="200dp"
                                            android:orientation="vertical"

                                            >
                                            <Button
                                                android:layout_width="30dp"
                                                android:layout_height="30dp"
                                                android:background="@mipmap/share_icon"
                                                android:id="@+id/shareButtonLesson"
                                                />
                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:id="@+id/textViewReportInfoLess"
                                                android:layout_margin="20dp"/>

                                        </LinearLayout>
                                    </android.support.v7.widget.CardView>

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="20dp"
                                            />

                                </LinearLayout>



                        </LinearLayout>

                    </LinearLayout>



        </LinearLayout>

    </ScrollView>
</LinearLayout>
