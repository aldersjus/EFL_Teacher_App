<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="64dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/studentReport"
        android:id="@+id/textViewReportTop"
        android:textSize="48dp"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold|italic"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="10dp"

        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="150dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/studentReportLinear"
            android:layout_marginStart="40dp">


            <Spinner
                android:layout_width="280dp"
                android:layout_height="60dp"
                android:textSize="22dp"
                android:layout_marginTop="30dp"
                android:id="@+id/spinnerStudentReport"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/spinner_border"
                >
            </Spinner>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="22dp"
                android:layout_marginTop="20dp"
                android:text="@string/select_name_student"
                android:id="@+id/textViewReportInfo"


                />


            <Button
                style="@style/Widget.AppCompat.Button"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:text="@string/showInfo"
                android:id="@+id/buttonReport"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="22dp"
                android:padding="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            >



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/reportFragmentStudentLinearLayoutTwo"
                    android:orientation="vertical"
                    android:layout_marginStart="70dp">


                    <android.support.v7.widget.CardView
                        android:layout_width="320dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:padding="12dp"
                        android:layout_margin="4dp"
                        android:elevation="12dp"
                        android:paddingBottom="50dp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="200dp"
                            android:orientation="vertical"
                            android:layout_marginStart="30dp"

                            >
                            <Button
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:background="@mipmap/share_icon"
                                android:id="@+id/shareButton"
                                />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">


                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <com.github.mikephil.charting.charts.BarChart
                                        android:layout_width="150dp"
                                        android:layout_height="100dp"
                                        android:id="@+id/chart">

                                    </com.github.mikephil.charting.charts.BarChart>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/graph"
                                        android:layout_marginStart="19dp"
                                        />
                                </LinearLayout>

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/imageView"
                                    android:layout_margin="10dp"
                                    />

                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/textViewStudentInfo"
                                android:layout_margin="20dp"/>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        />

                </LinearLayout>

        </LinearLayout>

    </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>