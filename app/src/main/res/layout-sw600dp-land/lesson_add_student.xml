<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/addStudent"
        android:id="@+id/textViewAddStudent"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold|italic"
        android:textSize="48dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/textViewAddStudentMessage"
        android:textSize="22dp"
        android:text=""
        android:layout_marginTop="40dp"
        android:layout_marginBottom="30dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/addStudentLinearLayout"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linearLayout2"
            >

            <Spinner
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:textSize="22dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:id="@+id/spinnerLessonAddStudent"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/spinner_border"
                >
            </Spinner>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/select_name_lesson"
                android:id="@+id/textView4"
                android:layout_gravity="center_horizontal"
                android:textSize="22dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linearLayout">

            <EditText
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:textSize="22dp"
                android:text=""
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:maxLines="1"
                android:inputType="textCapWords"
                android:id="@+id/editTextAddStudentTwo"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/enterStudentName"
                android:id="@+id/textView5"
                android:layout_gravity="center_horizontal"
                android:textSize="22dp"
                />


        </LinearLayout>
    </LinearLayout>
    <Button
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button"
        android:text="@string/addStuToLess"
        android:id="@+id/buttonAddStudent"
        android:layout_marginTop="40dp"
        android:textSize="22dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/colorPrimaryDark"
        android:padding="20dp"
        />
</LinearLayout>