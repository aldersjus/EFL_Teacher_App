<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/mark_off_lesson"
        android:id="@+id/textViewMarkOff"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/colorPrimary"
        android:textSize="50dp"
        android:textStyle="bold|italic"
        android:layout_marginTop="100dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000"
        android:textSize="20dp"
        android:text=""
        android:id="@+id/textViewLessonMarkOffMessage"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal" />

    <Spinner
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textSize="20dp"
        android:id="@+id/spinnerMarkOff"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/spinner_border"
        android:layout_marginTop="30dp"
        >
    </Spinner>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/select_name_lesson"
        android:layout_margin="20dp"
        android:id="@+id/textView2"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:inputType="textCapSentences"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:id="@+id/editTextTwoMarkOff"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/enterLessTitle"
        android:id="@+id/textView6"
        android:textSize="20dp"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal" />



    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button"
        android:text="@string/markOffLess"
        android:id="@+id/buttonMarkOff"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/colorPrimaryDark"
        android:padding="20dp"
        android:layout_marginTop="60dp"
        />
</LinearLayout>