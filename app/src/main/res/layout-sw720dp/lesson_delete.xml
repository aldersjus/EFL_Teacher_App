<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/deleteLesson"
        android:id="@+id/textViewDeleteLesson"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold|italic"
        android:textSize="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:layout_margin="20dp"
        android:id="@+id/textViewLessonDeleteMessage"
        android:text=""
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"
        />


    <Spinner
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/spinnerDeleteLesson"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="27dp"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"
        android:background="@drawable/spinner_border"
        >
    </Spinner>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/select_name_lesson"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/textView12"
        android:textSize="20dp"
        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/checkboxDeleteLesson"
        android:text="@string/yes_i_want_to_delete"/>
    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button"
        android:text="@string/buttonDeleteLesson"
        android:id="@+id/buttonDeleteLesson"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/colorPrimaryDark"
        android:padding="20dp"
        android:layout_marginTop="70dp"
        android:textSize="20dp"

        />

</LinearLayout>