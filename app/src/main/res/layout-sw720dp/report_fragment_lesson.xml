<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/relative"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lesson_information"
                android:id="@+id/textViewReportTopLess"
                android:layout_gravity="center_horizontal"
                android:textSize="50dp"
                android:textStyle="bold|italic"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="100dp"
                />

            <Spinner
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:textSize="20dp"
                android:id="@+id/spinnerLessonReportHere"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/spinner_border"
                >
            </Spinner>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="@string/select_name_lesson"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/textViewReportLessName"
                />

            <Button
                style="@style/Widget.AppCompat.Button"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="@string/showInfo"
                android:id="@+id/buttonReportLess"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="22dp"
                android:padding="20dp"
                android:layout_marginTop="30dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <android.support.v7.widget.CardView
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="12dp"
                    android:layout_margin="4dp"
                    android:elevation="12dp"
                    android:paddingBottom="50dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="230dp"
                        android:orientation="vertical"

                        >
                        <Button
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@mipmap/share_icon"
                            android:id="@+id/shareButtonLesson"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textViewReportInfoLess"
                            android:layout_margin="20dp"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>

